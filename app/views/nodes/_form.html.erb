<div class="row well">
  <div class="col-md-4">

    <%= form_for(@node) do |f| %>
      <% if @node.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@node.errors.count, "error") %> prohibited this node from being saved:</h2>

          <ul>
          <% @node.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_field :description %>
      </div>

      <div class="field">
        <%= f.label :category %><br>
        <%= f.select :category_ids, options_from_collection_for_select(Category.order(:name),
        :id, :name, @node.categories.map(&:id)), {include_blank: true},
        {multiple: true, size: Category.count} %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>

  </div><!--/.col-md-4 -->
</div><!--/.row well -->