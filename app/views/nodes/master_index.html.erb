<p id="notice"><%= notice %></p>
  <div class="panel panel-default">

    <div class="panel-heading">
      <h2>Master Node Index</h2>
      <h3>Listing All Nodes In All Maps</h3>

    </div><!--/.panel-heading -->

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Map</th>
          <th>Categories</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @nodes.each do |node| %>
          <tr>
            <td><%= node.name %></td>
            <td><%= node.description %></td>
            <td><%= link_to node.map.title, map_path(node.map) %></td>
            <td>
              <ul>
                <% node.categories.each do |category| %>
                  <li><%= category.kind %></li>
                <% end %>
              </ul>
            </td>
            <td><%= link_to 'Show', node %></td>
            <td><%= link_to 'Edit', edit_node_path(node) %></td>
            <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody><!-- /.table -->
    </table>

  </div><!--/.panel -->