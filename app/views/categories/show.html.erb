<p id="notice"><%= notice %></p>

<p>
  <strong>Kind:</strong>
  <%= @category.kind %>
</p>

<p>
  <strong>Map:</strong>
  <% if @category.map.nil? %>
    <div class="alert alert-warning">Not assigned to a map! Please follow 'Edit' path and attach to map entity.</div>
  <% else %>
    <%= @category.map.title %>
  <% end %>
</p>

<div class="panel panel-default">
  <div class="panel-heading">
    <strong>Linked to Nodes:</strong>
  </div>

    <table class="table">
      <thead>
        <tr>
          <th>Class</th>
          <th>Name</th>
        </tr>
      </thead>

    <tbody>
      <% @category.nodes.each do |node| %>
        <tr>
          <td><%= node.class %></td>
          <td><%= node.try(:name) || node.try(:title) %></td>
        </tr>
      <% end %>  
    </tbody>

      
     
    </table>

</div><!--/.panel -->

<%= link_to 'Edit', edit_category_path(@category) %> |
<% if @category.map_id.nil? %>
  <%= link_to 'Back', categories_path %>
<% else %>
  <%= link_to 'Back', map_path(@category.map_id) %>
<% end %>

